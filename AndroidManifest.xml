<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.oriondroids.OrionWalls">

      <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application android:label="@string/orion_name" android:icon="@drawable/orion_wallpaperchooser">
        <activity
            android:name="orionwalls"
            android:label="@string/orion_label"
            android:icon="@drawable/orion_wallpaperchooser"
            android:screenOrientation="nosensor"
            android:finishOnCloseSystemDialogs="true">
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
